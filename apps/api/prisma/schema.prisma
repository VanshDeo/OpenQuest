datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String           @id @default(cuid())
  email        String?          @unique
  username     String?          @unique
  githubId     String?          @unique
  name         String?
  avatarUrl    String?
  accessToken  String?
  skillProfile SkillProfile?
  preferences  UserPreferences?
  createdAt    DateTime         @default(now())
}

model SkillProfile {
  id                         String   @id @default(cuid())
  userId                     String   @unique
  user                       User     @relation(fields: [userId], references: [id])
  overallScore               Int      @default(0)
  overallLevel               String   @default("beginner")
  accountAgeYears            Int      @default(0)
  totalRepos                 Int      @default(0)
  totalStars                 Int      @default(0)
  contributionCount          Int      @default(0)
  languageStats              Json     @default("{}")
  frameworks                 String[] @default([])
  preferredContributionTypes String[] @default([])
  weeklyAvailability         String?
  lastFastUpdate             DateTime @default(now())
}

model UserPreferences {
  id                 String   @id @default(cuid())
  userId             String   @unique
  user               User     @relation(fields: [userId], references: [id])
  experienceLevel    String   @default("beginner")
  preferredLanguages String[] @default([])
  contributionTypes  String[] @default([])
  goal               String?
  onboardedAt        DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model RepoIndex {
  id             String   @id @default(cuid())
  repoId         String   @unique // e.g. "owner/repo"
  status         String   @default("pending") // pending | ready | failed
  commitHash     String?
  defaultBranch  String?
  sizeKB         Int?
  fileCount      Int?
  embeddingModel String?
  chunkCount     Int      @default(0)
  lastIndexedAt  DateTime @default(now())
  updatedAt      DateTime @default(now()) @updatedAt
}

model CodeChunk {
  id          String   @id @default(cuid())
  repoId      String   @map("repo_id")
  filePath    String   @map("file_path")
  language    String
  content     String
  startLine   Int      @map("start_line")
  endLine     Int      @map("end_line")
  symbolName  String?  @map("symbol_name")
  chunkIndex  Int      @map("chunk_index")
  embedding   Unsupported("vector(768)")?
  embeddedAt  DateTime @default(now()) @map("embedded_at")

  @@index([repoId])
  @@map("code_chunks")
}

model RepoArchitecture {
  id          String   @id @default(cuid())
  repoId      String   @unique
  commitHash  String?
  summary     String
  techStack   String[]
  entryPoints String[]
  keyFiles    String[]
  graph       Json
  generatedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@map("repo_architectures")
}

